<Window x:Class="LocalIM.Chat.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" ShowInTaskbar="false"
        
        Title="ChatWindow" Height="300" Width="300" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip">
    <DockPanel>
         <TextBlock Text="Chat Window" HorizontalAlignment="Center" DockPanel.Dock="Top"/>
         <TextBlock Text="{Binding Username}" HorizontalAlignment="Center" DockPanel.Dock="Top"/>
         <ListBox ItemsSource="{Binding Messages}"></ListBox>
    </DockPanel>
</Window>
